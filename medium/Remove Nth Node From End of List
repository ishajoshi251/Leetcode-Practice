# Definition for singly-linked list.
# class ListNode(object):
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution(object):
    def removeNthFromEnd(self, head, n):
        """
        :type head: ListNode
        :type n: int
        :rtype: ListNode
        """
        count = 0
        itr = head
        while itr:
            count += 1
            itr = itr.next
        if count == 1:
            head = None
            return head
        if count == n:
            head = head.next
            return head
            
        c = 0
        temp = head
        while c < count-n-1:
            c += 1
            temp = temp.next
        if temp.next.next:
            temp.next = temp.next.next
        else:
            temp.next = None
        
        return head
